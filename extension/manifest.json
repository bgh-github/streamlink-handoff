{
  "manifest_version": 3,
  "name": "Streamlink Handoff",
  "version": "2.0.1",
  "description": "Pass video URLs to Streamlink for playback",
  "icons": {"48": "icon.svg", "96": "icon.svg"},
  "background": {"scripts": ["background.js"]},
  "permissions": ["menus", "nativeMessaging", "storage", "clipboardWrite"],
  "browser_specific_settings": {"gecko": {"id": "streamlink-handoff@bgh.io"}},
  "options_ui": {"page": "options.html"}
}
